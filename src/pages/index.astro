---
import Layout from '../layouts/Layout.astro'
import Hero from '../components/Hero.astro'
import Section from '../components/Section.astro'
import Card from '../components/Card.astro'
import FAQ from '../components/FAQ.astro'

const values = [
  {
    title: 'Excellence',
    description: 'Nous visons l\'excellence dans chaque initiative, en appliquant des standards élevés à toutes nos activités',
    icon: 'diamond'
  },
  {
    title: 'Cohérence',
    description: 'Une vision unifiée et des processus harmonisés garantissent la synergie entre nos différents pôles',
    icon: 'hexagon'
  },
  {
    title: 'Innovation',
    description: 'Nous anticipons les évolutions du marché pour proposer des solutions toujours plus pertinentes',
    icon: 'circle'
  },
  {
    title: 'Intégrité',
    description: 'La transparence et l\'éthique guident chacune de nos décisions stratégiques et opérationnelles',
    icon: 'square'
  }
]

const poles = [
  {
    title: 'Wuilhome',
    tagline: 'Conciergerie',
    description: 'Services de conciergerie pour une gestion locative d\'exception',
    services: ['Gestion locative', 'Accueil voyageurs', 'Entretien', 'Maintenance'],
    href: '/poles#wuilhome',
    externalLink: 'https://www.wuilhome.com',
    logo: '/images/logos/logo-wuilhome.webp'
  },
  {
    title: 'W4S',
    tagline: 'Services & Mise en relation',
    description: 'Plateforme de mise en relation et services B2B personnalisés',
    services: ['Mise en relation', 'Services B2B', 'Accompagnement', 'Support dédié'],
    href: '/poles#w4s',
    externalLink: 'https://www.w4service.fr',
    logo: '/images/logos/logo-w4s.webp'
  },
  {
    title: 'Le Rebond',
    tagline: 'Complexe Sportif',
    description: 'Complexe sportif moderne dédié au bien-être et à la performance',
    services: ['Terrains multisports', 'Coaching', 'Cours collectifs', 'Événements'],
    href: '/poles#le-rebond',
    externalLink: 'https://www.le-rebond.fr',
    logo: null
  }
]

const faqItems = [
  {
    question: 'Qu\'est-ce que WEPE ?',
    answer: 'WEPE est une holding française qui structure et développe un écosystème de services complémentaires. Notre groupe réunit trois pôles d\'activité : Wuilhome (conciergerie), W4S (services et mise en relation) et Le Rebond (complexe sportif)'
  },
  {
    question: 'Quels services propose le groupe WEPE ?',
    answer: 'Le groupe WEPE propose des services diversifiés à travers ses filiales : gestion locative et conciergerie avec Wuilhome, mise en relation professionnelle et services B2B avec W4S, et activités sportives et bien-être avec Le Rebond'
  },
  {
    question: 'Comment contacter WEPE pour un partenariat ?',
    answer: 'Pour toute proposition de partenariat, vous pouvez nous contacter via notre formulaire en ligne sur la page Contact ou directement par email à contact@wepe.fr. Notre équipe étudie chaque proposition avec attention'
  }
]
---

<Layout
  title="Accueil"
  description="WEPE, holding premium structurant un écosystème de services innovants : conciergerie, mise en relation et sport. Découvrez notre groupe et nos filiales."
>
  <!-- Hero -->
  <Hero
    subtitle="Groupe WEPE"
    title="Structurer l'excellence, développer l'avenir"
    description="WEPE est une holding française qui fédère et développe un écosystème de services complémentaires. Notre mission : créer de la valeur durable à travers une gouvernance rigoureuse et une vision stratégique commune."
    primaryCTA={{ text: 'Découvrir le groupe', href: '/groupe' }}
    secondaryCTA={{ text: 'Nos pôles d\'activité', href: '/poles' }}
  />

  <!-- Nos Valeurs -->
  <Section
    subtitle="Notre ADN"
    title="Des valeurs qui guident notre action"
    description="Chaque décision, chaque projet est porté par des principes fondamentaux qui définissent l'identité du groupe WEPE."
    background="light"
  >
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {values.map((value) => (
        <Card
          title={value.title}
          description={value.description}
          icon={value.icon}
          variant="elevated"
        />
      ))}
    </div>
  </Section>

  <!-- Nos Pôles -->
  <Section
    subtitle="Notre écosystème"
    title="Trois pôles, une vision"
    description="Le groupe WEPE réunit des activités complémentaires qui partagent une même exigence de qualité et d'innovation"
  >
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {poles.map((pole) => (
        <a
          href={pole.href}
          class="group bg-wepe-white border border-wepe-gray/20 rounded-xl p-6 md:p-8 hover:border-wepe-red/30 hover:shadow-lg transition-all duration-300"
        >
          <!-- Logo ou Titre -->
          <div class="h-16 flex items-center justify-center mb-6">
            {pole.logo ? (
              <img
                src={pole.logo}
                alt={pole.title}
                class="h-12 w-auto object-contain"
              />
            ) : (
              <h3 class="text-2xl font-semibold text-wepe-black">{pole.title}</h3>
            )}
          </div>

          <!-- Tagline -->
          <p class="text-wepe-red text-xs font-medium uppercase tracking-wider mb-3 text-center">
            {pole.tagline}
          </p>

          <!-- Description -->
          <p class="text-wepe-gray-dark text-sm leading-relaxed mb-6 text-center">
            {pole.description}
          </p>

          <!-- Services -->
          <ul class="grid grid-cols-2 gap-2 mb-6">
            {pole.services.map((service) => (
              <li class="flex items-center gap-2 text-xs text-wepe-gray-dark">
                <svg class="w-3 h-3 text-wepe-red flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                </svg>
                {service}
              </li>
            ))}
          </ul>

          <!-- CTA -->
          <div class="flex items-center justify-center gap-4 pt-4 border-t border-wepe-gray/10">
            <span class="flex items-center text-wepe-red font-medium text-sm group-hover:gap-2 transition-all">
              En savoir plus
              <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
              </svg>
            </span>
          </div>
        </a>
      ))}
    </div>
  </Section>

  <!-- Chiffres clés -->
  <Section background="dark">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
      <div>
        <p class="text-4xl md:text-5xl font-bold text-wepe-white mb-2">3</p>
        <p class="text-wepe-gray text-sm uppercase tracking-wider">Pôles d'activité</p>
      </div>
      <div>
        <p class="text-4xl md:text-5xl font-bold text-wepe-white mb-2">8+</p>
        <p class="text-wepe-gray text-sm uppercase tracking-wider">Collaborateurs</p>
      </div>
      <div>
        <p class="text-4xl md:text-5xl font-bold text-wepe-white mb-2">7</p>
        <p class="text-wepe-gray text-sm uppercase tracking-wider">Années d'expérience</p>
      </div>
      <div>
        <p class="text-4xl md:text-5xl font-bold text-wepe-white mb-2">30+</p>
        <p class="text-wepe-gray text-sm uppercase tracking-wider">Clients satisfaits</p>
      </div>
    </div>
  </Section>

  <!-- FAQ -->
  <Section
    subtitle="Questions fréquentes"
    title="Mieux comprendre WEPE"
    background="light"
  >
    <div class="max-w-3xl mx-auto">
      <FAQ items={faqItems} />
    </div>
  </Section>

  <!-- CTA Final -->
  <Section>
    <div class="text-center max-w-2xl mx-auto">
      <h2 class="mb-4">Construisons ensemble</h2>
      <p class="text-lg text-wepe-gray-dark mb-8">
        Vous souhaitez en savoir plus sur le groupe WEPE ou explorer des opportunités de collaboration ? Notre équipe est à votre écoute.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="btn-primary">
          Nous contacter
        </a>
        <a href="/groupe" class="btn-secondary">
          En savoir plus
        </a>
      </div>
    </div>
  </Section>
</Layout>
