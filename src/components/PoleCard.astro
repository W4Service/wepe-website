---
interface Props {
  name: string
  tagline: string
  description: string
  services: string[]
  id: string
  website?: string
  logo?: string
  color?: string
}

const {
  name,
  tagline,
  description,
  services,
  id,
  website,
  logo,
  color = '#8B1E26'
} = Astro.props
---

<article id={id} class="group relative bg-wepe-white rounded-xl overflow-hidden border border-wepe-gray/20 hover:border-wepe-red/30 transition-all duration-300">
  <!-- Accent bar -->
  <div class="absolute top-0 left-0 right-0 h-1 bg-wepe-red"></div>

  <div class="p-8 md:p-10">
    <header class="mb-6 flex items-start justify-between gap-4">
      <div>
        <p class="text-wepe-red text-sm font-medium uppercase tracking-wider mb-2">
          {tagline}
        </p>
        <h3 class="text-2xl md:text-3xl font-semibold text-wepe-black">
          {name}
        </h3>
      </div>
      {logo && (
        <img
          src={logo}
          alt={`Logo ${name}`}
          width="140"
          height="70"
          class={`object-contain flex-shrink-0 ${logo.includes('w4s') ? 'h-16' : 'h-12'}`}
        />
      )}
    </header>

    <p class="text-wepe-gray-dark leading-relaxed mb-8">
      {description}
    </p>

    <div class="space-y-4">
      <h4 class="text-sm font-semibold text-wepe-black uppercase tracking-wider">
        Services cl√©s
      </h4>
      <ul class="grid grid-cols-1 sm:grid-cols-2 gap-3">
        {services.map((service) => (
          <li class="flex items-start gap-2 text-sm text-wepe-gray-dark">
            <svg class="w-5 h-5 text-wepe-red flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
            </svg>
            {service}
          </li>
        ))}
      </ul>
    </div>

    {website && (
      <div class="mt-8 pt-6 border-t border-wepe-gray/20">
        <a
          href={website}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center text-wepe-red hover:text-wepe-red-dark font-medium text-sm transition-colors"
        >
          Visiter le site {name}
          <svg class="w-4 h-4 ml-2" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
          </svg>
        </a>
      </div>
    )}
  </div>
</article>
