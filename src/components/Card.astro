---
interface Props {
  title: string
  description: string
  icon?: 'diamond' | 'diamond-outline' | 'circle' | 'square' | 'triangle' | 'hexagon' | string
  href?: string
  externalLink?: string
  variant?: 'default' | 'bordered' | 'elevated'
}

const {
  title,
  description,
  icon,
  href,
  externalLink,
  variant = 'default'
} = Astro.props

const Tag = href ? 'a' : 'div'

const variantClasses = {
  default: 'bg-wepe-white',
  bordered: 'bg-wepe-white border border-wepe-gray/30',
  elevated: 'bg-wepe-white shadow-lg shadow-wepe-black/5'
}

const hoverClasses = href ? 'hover:shadow-xl hover:shadow-wepe-black/10 hover:-translate-y-1 cursor-pointer' : ''
---

<Tag
  href={href}
  class={`group block p-8 rounded-lg transition-all duration-300 text-center ${variantClasses[variant]} ${hoverClasses}`}
>
  {icon && (
    <div class="w-12 h-12 bg-wepe-red/10 rounded-lg flex items-center justify-center mb-6 mx-auto">
      {icon === 'diamond' && (
        <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect
            x="12" y="2" width="14" height="14"
            transform="rotate(45 12 2)"
            class="stroke-wepe-red fill-transparent group-hover:fill-wepe-red transition-all duration-300"
            stroke-width="2"
          />
        </svg>
      )}
      {icon === 'diamond-outline' && (
        <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect
            x="12" y="3" width="12.5" height="12.5"
            transform="rotate(45 12 3)"
            class="stroke-wepe-red fill-transparent group-hover:fill-wepe-red transition-all duration-300"
            stroke-width="2"
          />
        </svg>
      )}
      {icon === 'circle' && (
        <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <circle
            cx="12" cy="12" r="9"
            class="stroke-wepe-red fill-transparent group-hover:fill-wepe-red transition-all duration-300"
            stroke-width="2"
          />
        </svg>
      )}
      {icon === 'square' && (
        <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect
            x="3" y="3" width="18" height="18" rx="2"
            class="stroke-wepe-red fill-transparent group-hover:fill-wepe-red transition-all duration-300"
            stroke-width="2"
          />
        </svg>
      )}
      {icon === 'triangle' && (
        <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path
            d="M12 3L22 21H2L12 3Z"
            class="stroke-wepe-red fill-transparent group-hover:fill-wepe-red transition-all duration-300"
            stroke-width="2"
            stroke-linejoin="round"
          />
        </svg>
      )}
      {icon === 'hexagon' && (
        <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path
            d="M12 2L21 7V17L12 22L3 17V7L12 2Z"
            class="stroke-wepe-red fill-transparent group-hover:fill-wepe-red transition-all duration-300"
            stroke-width="2"
            stroke-linejoin="round"
          />
        </svg>
      )}
      {!['diamond', 'diamond-outline', 'circle', 'square', 'triangle', 'hexagon'].includes(icon) && (
        <span class="text-wepe-red text-2xl">{icon}</span>
      )}
    </div>
  )}

  <h3 class="text-xl font-semibold text-wepe-black mb-3">
    {title}
  </h3>

  <p class="text-wepe-gray-dark leading-relaxed">
    {description}
  </p>

  {(href || externalLink) && (
    <div class="mt-6 flex flex-wrap items-center gap-4">
      {href && (
        <span class="flex items-center text-wepe-red font-medium text-sm">
          En savoir plus
          <svg class="w-4 h-4 ml-2" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
        </span>
      )}
      {externalLink && (
        <a
          href={externalLink}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center text-wepe-gray-dark hover:text-wepe-red font-medium text-sm transition-colors"
          onclick="event.stopPropagation();"
        >
          Visiter le site
          <svg class="w-4 h-4 ml-1" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
          </svg>
        </a>
      )}
    </div>
  )}
</Tag>
